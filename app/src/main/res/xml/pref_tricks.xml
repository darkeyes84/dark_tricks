<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="prefScreen">

    <SwitchPreference
        android:key="trick_show4gForLte"
        android:title="@string/show4gForLte_title"
        android:summary="@string/show4gForLte_summary"
        android:defaultValue="false" />

    <SwitchPreference
        android:key="trick_hideLtePlus"
        android:title="@string/hideLtePlus_title"
        android:summary="@string/hideLtePlus_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_useKeyguardPhone"
        android:title="@string/useKeyguardPhone_title"
        android:summary="@string/useKeyguardPhone_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_hideNextAlarm"
        android:title="@string/hideNextAlarm_title"
        android:summary="@string/hideNextAlarm_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_hideVpn"
        android:title="@string/hideVpn_title"
        android:summary="@string/hideVpn_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_hideCert"
        android:title="@string/hideCert_title"
        android:summary="@string/hideCert_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_navbarAlwaysRight"
        android:title="@string/navbarAlwaysRight_title"
        android:summary="@string/navbarAlwaysRight_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_forceDarkTheme"
        android:title="@string/forceDarkTheme_title"
        android:summary="@string/forceDarkTheme_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_hideAdbNotification"
        android:title="@string/hideAdbNotification_title"
        android:summary="@string/hideAdbNotification_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_hideBuildVersion"
        android:title="@string/hideBuildVersion_title"
        android:summary="@string/hideBuildVersion_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_proximityWakeUp"
        android:title="@string/proximityWakeUp_title"
        android:summary="@string/proximityWakeUp_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_powerTorch"
        android:title="@string/powerTorch_title"
        android:summary="@string/powerTorch_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_skipTrack"
        android:title="@string/skipTrack_title"
        android:summary="@string/skipTrack_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="trick_screenOffNotifications"
        android:title="@string/screenOffNotifications_title"
        android:summary="@string/screenOffNotifications_summary"
        android:defaultValue="false" />

    <ListPreference
        android:key="trick_lessNotifications"
        android:title="@string/lessNotifications_title"
        android:entries="@array/lessNotifications_entries"
        android:entryValues="@array/lessNotifications_values"
        android:defaultValue="0" />

    <ListPreference
        android:key="trick_cursorControl"
        android:title="@string/cursorControl_title"
        android:entries="@array/cursorControl_entries"
        android:entryValues="@array/cursorControl_values"
        android:defaultValue="0" />

    <EditTextPreference
        android:key="trick_customCarrierText"
        android:title="@string/customCarrierText_title"
        android:defaultValue="" />

</PreferenceScreen>
